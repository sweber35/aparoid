{
  "exclude": ["old/**"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": { "~/*": ["./src/*"] },
    "strict": true,
    "skipLibCheck": true,
    "target": "esnext",
    "types": ["vite/client"],
    "noEmit": true
  }
}
